<div class="container-fluid" id="app">
    <div class="page-title-box">
        <div class="row align-items-center">
            <div class="col-sm-6">
                <h4 class="page-title"><i class="mdi mdi-tshirt-crew"></i> <%= title %></h4>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-right">
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Yogi</a></li>
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
            </div>
        </div>
        <!-- end row -->
    </div>
    <!-- end page-title -->

    <!-- START button-->
    <div class="row">
        <div class="col py-3 text-right">
        <button type="button" class="btn btn-secondary waves-effect waves-light"  @click="edit(dataResponses.id)"><i class="mdi mdi-file-document-edit-outline align-middle mr-2"></i>Edit Barang Jadi</button>
        </div>
    </div>
    <!-- end button -->

    <!-- START ROW -->
    <div class="row">
        <div class="col-12">
            <div class="card m-b-30">
                <div class="card-body">

                    <h4 class="mt-0 mb- header-title">Data barang jadi</h4>


                    <div class="form-group row">
                        <h3 class="col-sm-6 pl-4">{{dataResponses.id}}</h3>
                    </div>
                    <hr>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Minggu</label>
                        <div class="col-sm-10">
                            {{dataResponses.tanggal}}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Nama Item</label>
                        <div class="col-sm-10">
                            {{dataResponses.nama}}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Banyak (pcs)</label>
                        <div class="col-sm-10">
                            {{dataResponses.totalJumlah}}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Total Tambahan Biaya</label>
                            <div class="col-sm-10">
                                {{dataResponses.totalTambahanBiaya}}
                            </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Harga Pokok (Rp)</label>
                        <div class="col-sm-10">
                            {{convertToRupiah(Math.ceil(dataResponses.totalBiaya) + Math.ceil(dataResponses.totalTambahanBiaya))}}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Harga Barang/pcs (Rp)</label>
                        <div class="col-sm-10">
                            {{convertToRupiah(Math.ceil(dataResponses.hargaBarang))}}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Keterangan</label>
                        <div class="col-sm-10">
                            {{dataResponses.ket}}
                        </div>
                    </div>
                </div>
            </div>
        </div> <!-- end col -->
    </div>
    <!-- END ROW -->

    <!-- START ROW -->
    <div class="row">
        <div class="col-12">
            <div class="card m-b-30">
                <div class="card-body">
                    <h4 class="mt-0 mb- header-title mb-2">Penambahan Biaya</h4>
                    <div class="d-flex flex-row mb-3">
                        <div class="mr-3">
                            <div v-for="tambahanBiaya in dataResponses.tambahanBiaya" :key="tambahanBiaya.ket">
                                    <div>{{tambahanBiaya.ket}}</div>    
                            </div>
                        </div>
                        <div>
                            <div v-for="tambahanBiaya in dataResponses.tambahanBiaya" :key="tambahanBiaya.ket">
                                <div>: {{tambahanBiaya.nominal}}</div> 
                            </div>   
                        </div>
                   </div>
                    </div>                   
                </div>
            </div>
        </div> <!-- end col -->
    <!-- END ROW -->

     <!-- START ROW -->
     <div class="row">
        <div class="col-12">
            <div class="card m-b-30">
                <div class="card-body">
                    <h4 class="mt-0 mb- header-title">Sub Item</h4>
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Nama Item</th>
                                    <th>Banyak(Pcs)</th>
                                    <th>Total Biaya/Pcs(Rp)</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr v-for="dataItem in dataResponses.detil" :key="dataItem.idItem">
                                    <td><a @click="detilItem(dataItem.idItem)" style="color:#2980b9">{{dataItem.idItem}}</a></td>
                                    <td>{{dataItem.namaItem}}</td>
                                    <td>{{convertToRupiah(dataItem.jumlahItem)}}</td>
                                    <td>{{convertToRupiah(dataItem.totalBiayaItemPerPcs)}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>                   
                </div>
            </div>
        </div> <!-- end col -->
    </div>
    <!-- END ROW -->

</div>

<script>
    const apiUrl = '<%=process.env.URL%>'
    var app = new Vue({
     el: '#app',
     data: {
         id:'',
         dataResponses:{},
         detailAmount: {
              totalJumlah:""
          }
     },
     async created() {
        this.id = JSON.parse('<%-data%>')
        await this.getData(this.id)
     },
     methods : {
        edit: function(id){
            location.href = "/dataproduksi/barangjadi/edit/"+id
        },
        getData: async function(id) {
            try{
                const res = await axios.post(apiUrl+'dataproduksi/barangjadi/detil/'+id)
                this.dataResponses = res.data[0]
                console.log(this.dataResponses)
            }catch(err){
                alert("Get data"+' '+err)
            }
        },
        convertToRupiah: function (val) {
            var txtNumber = parseFloat(val)
            var txtString = txtNumber.toString()
            var sisa = txtString.length % 3
            var rupiah = txtString.substr(0, sisa)
            var ribuan = txtString.substr(sisa).match(/\d{3}/g)
            if (ribuan) {
                var separator = sisa ? ',' : ''
                rupiah += separator + ribuan.join(',')
            }
            return rupiah
        }
     }
})
</script>