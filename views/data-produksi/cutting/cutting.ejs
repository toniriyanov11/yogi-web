<div class="container-fluid" id="app">
    <div class="page-title-box">
        <div class="row align-items-center">
            <div class="col-sm-6">
                <h4 class="page-title"><i class="mdi mdi-content-cut "></i> <%= title %></h4>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-right">
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Yogi</a></li>
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
            </div>
        </div>
        <!-- end row -->
    </div>
    <!-- end page-title -->

    <!-- Start row-->
    <div class="row">
        <div class="col-4">
            <div class="card m-b-30">
                <div class="card-body">
                    <h3 class="mb-4 header-title">Stok Bahan</h4>
                        <div v-for="dataStuffStock in dataStuffStocks" :key="dataStuffStock.id" class="mb-2">{{dataStuffStock.nama}} : {{dataStuffStock.stock}} Kg</div>
                </div>
            </div>
        </div>
    </div>        
    <!-- end row -->


    <!-- START button-->
    <div class="row">
        <div class="col py-3 text-right">
          <button type="button" class="btn btn-primary waves-effect waves-light"  @click="tambah()"><i class="mdi mdi-plus align-middle mr-2"></i>Tambah Cutting</button>
        </div>
    </div>
    <!-- end button -->

    <!-- START ROW -->
    <div class="row">
        <div class="col-12">
            <div class="card m-b-30">
                <div class="card-body">

                    <h4 class="mt-0 header-title">Data Cutting</h4>
                    
                    <table id="datatable-buttons" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead>
                        <tr>
                            <th>Tanggal</th>
                            <th>No</th>
                            <th>Nama Item</th>
                            <th>Berat(Kg)</th>
                            <th>Banyak(Pcs)</th>
                            <th>Total Harga Bahan(Rp)</th>
                            <th>Total Biaya/pcs(Rp)</th>
                            <th>Total Biaya(Rp)</th>
                            <th>Upah/pcs(Rp)</th>
                            <th>Hasil/pcs(Kg)</th>
                            <th>Harga/kg(Rp)</th>
                            <!-- <th>Jenis produk</th>
                            <th>Jenis Bahan</th>
                            <th>Varian Bahan</th>
                            <th>Warna Bahan</th>
                            <th>Tipe Cuttingan</th> -->
                            <th>Action</th>
                        </tr>
                        </thead>


                        <tbody>
                        <tr v-for="dataResponse in dataResponses" :key="dataResponse.id"> 
                            <td>{{dataResponse.tanggal}}</td>
                            <td class="clicked"><a @click="detil(dataResponse.id)">{{dataResponse.id}}</a></td>
                            <td>{{dataResponse.nama}}</td>
                            <td>{{dataResponse.berat}}</td>
                            <td>{{dataResponse.jumlah}}</td>
                            <td>{{convertToRupiah(dataResponse.totalHargaBahan)}}</td>
                            <td>{{convertToRupiah(dataResponse.totalBiayaPerPcs)}}</td>
                            <td>{{convertToRupiah(dataResponse.totalBiaya)}}</td>
                            <td>{{convertToRupiah(dataResponse.upah)}}</td>
                            <td>{{dataResponse.hasilPerPcs}}</td>
                            <td>{{convertToRupiah(dataResponse.hargaPerKg)}}</td>
                            <!-- <td>{{dataResponse.ketJenisProduk}}</td>
                            <td>{{dataResponse.ketJenisBahan}}</td>
                            <td>{{dataResponse.ketVarianBahan}}</td>
                            <td>{{dataResponse.ketWarnaBahan}}</td>
                            <td>{{dataResponse.ketTipeCutting}}</td>     -->
                            <td>
                                <button type="button" @click="edit(dataResponse.id)"  class="btn btn-light waves-effect"><i class="icon-pencil"></i></button>
                                <button type="button" @click="alertDelete(dataResponse.id)" class="btn btn-light waves-effect"><i class="icon-delete"></i></button>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div> <!-- end col -->
    </div> 
    <!-- END ROW -->

</div>

<script>
    const apiUrl = '<%= process.env.URL %>'
     var app = new Vue({
      el: '#app',
      data: {
          dataResponses : {},
          dataStuffStocks:{},
      },
      async created() {
        await this.getData()
        await this.getStuffStock()
      },
      methods:{
         edit: function(id){
             location.href = "/dataproduksi/cutting/edit/"+id
         },
         detil: function(id){
             location.href = "/dataproduksi/cutting/detil/"+id
         },
         tambah: function(){
             location.href = "/dataproduksi/cutting/tambah"
         },
         getData: async function() {
             try{
                 const res = await axios.post(apiUrl+'dataproduksi/cutting')
                 this.dataResponses = res.data
             }catch(err){
                 alert("Get data"+' '+err)
             }
         },
         deleteData: async function(id){
             try{
                 const res = await axios.post(apiUrl+'dataproduksi/cutting/hapus/'+id)
                 if (res.data.success){
                     this.alertSuccess(res.data.msg)
                     setTimeout(function(){ location.reload(); }, 1000);
                 } else {
                     alert(res.data.msg)
                 }
             }catch(err){
                 alert("Delete data"+' '+err)
             }
         },
         getStuffStock: async function() {
             try{
                 const res = await axios.get(apiUrl+'master/stuff-stock')
                 this.dataStuffStocks = res.data
                 console.log(this.dataStuffStocks)
             }catch(err){
                 alert("Get data"+' '+err)
             }
         },
         convertToRupiah: function (val) {
             var txtNumber = parseFloat(val)
             var txtString = txtNumber.toString()
             var sisa = txtString.length % 3
             var rupiah = txtString.substr(0, sisa)
             var ribuan = txtString.substr(sisa).match(/\d{3}/g)
             if (ribuan) {
                 var separator = sisa ? ',' : ''
                 rupiah += separator + ribuan.join(',')
             }
             return rupiah
         },
         alertDelete:  function (data) {
              swal({
                 title: "Anda yakin ingin menghapus data?",
                 text: "Ketika data terhapus, data tidak dapat dikembalikan!",
                 icon: "warning",
                 buttons: ["batal", "ya,hapus!"],
                 dangerMode: true,
                 })
                 .then((willDelete) => {
                 if (willDelete) {
                      this.deleteData(data)
                 }
             });
         },
         alertSuccess: function (message){
             swal({
                 title:"",
                 text:message, 
                 icon:"success",
                 buttons:false});
         }
      }
 })    
 </script>