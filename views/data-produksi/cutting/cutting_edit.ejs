<div class="container-fluid"  id="app">
    <div class="page-title-box">
        <div class="row align-items-center">
            <div class="col-sm-6">
                <h4 class="page-title"><i class="mdi mdi-content-cut "></i> <%= title %></h4>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-right">
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Yogi</a></li>
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
            </div>
        </div>
        <!-- end row -->
    </div>
    <!-- end page-title -->

    <!-- START ROW -->
    <div class="row">
        <div class="col-12">
            <div class="card m-b-30">
                <div class="card-body">

                    <div class="row">
                        <div class="col-sm-6">
                            <h4 class="mt-0 mb-4 header-title">Edit data cutting</h4>
                        </div>
                        <div class="col-sm-6">
                            <h4 class="mt-0 mb-4 header-title text-right"><%= data.id%></h4>
                        </div>
                     </div>
                    
                    <div class="form-group row">
                        <label for="example-date-input" class="col-sm-2 col-form-label">Tanggal</label>
                        <div class="col-sm-10">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="mm/dd/yyyy" value="<%= data.tgl%>" id="datepicker-autoclose">
                                <div class="input-group-append bg-custom b-0"><span class="input-group-text"><i class="mdi mdi-calendar"></i></span></div>
                            </div><!-- input-group -->
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2 col-form-label">Nama Item</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" value="<%= data.nama%>" id="example-text-input">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Jenis Bahan</label>
                            <div class="col-sm-10">
                                <select class="form-control" v-model="valueJenis">
                                    <option >pilih jenis bahan</option>
                                    <option  <% if(data.jenis === 'polos') { %> selected <% } %>>polos</option>
                                    <option  <% if(data.jenis === 'salur') { %> selected <% } %>>salur</option>
                                    <option  <% if(data.jenis === 'full print') { %> selected <% } %>>full print</option>
                                    <option  <% if(data.jenis === 'rip') { %> selected <% } %>>rip</option>
                                </select>
                            </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Varian Bahan</label>
                            <div class="col-sm-10">
                                <select class="form-control" v-model="valueVarian">
                                    <option >pilih varian bahan</option>
                                    <option <% if(data.varian === 'solid') { %> selected <% } %>>solid</option>
                                    <option <% if(data.varian === 'two tone') { %> selected <% } %>>two Tone</option>
                                </select>
                            </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Warna Bahan </label>
                            <div class="col-sm-10">
                                <select class="form-control" v-model="valueWarna">
                                    <option >pilih warna bahan</option>
                                    <option <% if(data.warna === 'hitam') { %> selected <% } %>>hitam</option>
                                    <option <% if(data.warna === 'putih') { %> selected <% } %>>putih</option>
                                    <option <% if(data.warna === 'biru') { %> selected <% } %>>biru</option>
                                </select>
                            </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2 col-form-label">Keterangan</label>
                        <div  class="col-sm-10">
                            <textarea required class="form-control" rows="3"><%= data.ket%></textarea>
                        </div>
                    </div>
                    <hr>
                    <div class="form-group row">
                        <label for="example-search-input" class="col-sm-2 col-form-label">Berat (kg)</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="number" value="<%= data.berat%>" id="example-search-input">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-search-input" class="col-sm-2 col-form-label">Banyak (pcs)</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="number" value="<%= data.jumlah%>" id="example-search-input">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-search-input" class="col-sm-2 col-form-label">Upah/pcs (Rp)</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" value="<%= data.upahpcs%>" id="example-search-input">
                        </div>
                    </div>
                    <hr>
                    <div class="form-group row">
                        <label for="example-search-input" class="col-sm-2 col-form-label">Hasil/pcs (Kg)</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" value="<%= data.hasilpcs%>" id="example-search-input">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-search-input" class="col-sm-2 col-form-label">Harga/kg (Rp)</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" value="<%= data.hargakg%>" id="example-search-input">
                        </div>
                    </div>
                    <hr>
                    <div class="form-group row">
                        <label for="example-number-input" class="col-sm-2 col-form-label">Total Harga Bahan (Rp)</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" value="<%= data.tothbahan%>" id="example-number-input">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-number-input" class="col-sm-2 col-form-label">Total Biaya (Rp)</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" value="<%= data.totbiaya%>" id="example-number-input">
                        </div>
                    </div>
                    <div class="form-group text-right">
                        <div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">
                                Submit
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div> <!-- end col -->
    </div>
    <!-- END ROW -->

</div>

<script>
    function tambah(){
        location.href = "/cutting"
    }
    
</script>
<script src="https://cdn.jsdelivr.net/npm/vue@2.6.11"></script> 
<script>
    var app = new Vue({
     el: '#app',
     data: {
         valueJenis:'<%= data.jenis  %>',
         valueVarian:'<%= data.varian  %>',
         valueWarna:'<%= data.warna  %>'
     }
     })
 </script>