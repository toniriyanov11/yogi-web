    <!-- end button -->

    <!-- START ROW -->
    <div class="row">
        <div class="col-12">
            <div class="card m-b-30">
                <div class="card-body">

                    <h4 class="mt-0 mb- header-title">Data cutting</h4>


                    <div class="form-group row">
                        <h3 class="col-sm-6 pl-4">{{dataResponses.id}}</h3>
                    </div>
                    <hr>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Tanggal</label>
                        <div class="col-sm-10">
                            {{dataResponses.tanggal}}   
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Nama Item</label>
                        <div class="col-sm-10">
                            {{dataResponses.nama}}  
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Jenis Produk</label>
                        <div class="col-sm-10">
                            {{dataResponses.ketJenisProduk}}  
                        </div>
                    </div>
                    <hr>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Jenis Bahan</label>
                        <div class="col-sm-10">
                            {{dataResponses.ketJenisBahan}}  
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Varian Bahan</label>
                        <div class="col-sm-10">
                            {{dataResponses.ketVarianBahan}}  
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Warna Bahan</label>
                        <div class="col-sm-10">
                            {{dataResponses.ketWarnaBahan}}  
                        </div>
                    </div>
                    <hr>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Tipe Cuttingan</label>
                        <div class="col-sm-10">
                            {{dataResponses.ketTipeCutting}}  
                        </div>
                    </div>
                    <div v-if="dataResponses.tipeCutting == typeCuttingCombination" class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Tipe Sub Cuttingan</label>
                        <div class="col-sm-10">
                            {{dataResponses.ketTipeSubCutting}}  
                        </div>
                    </div>
                    <hr>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Keterangan</label>
                        <div class="col-sm-10">
                            {{dataResponses.ket}}  
                        </div>
                    </div>
                    <hr>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Berat(kg)</label>
                        <div class="col-sm-2">
                            {{dataResponses.berat}}  
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Banyak(pcs)</label>
                        <div class="col-sm-2">
                            {{dataResponses.jumlah}}  
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Upah/pcs(Rp)</label>
                        <div class="col-sm-2">
                            {{convertToRupiah(dataResponses.upah)}}  
                        </div>
                    </div>
                    <hr>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Harga/kg(Rp)</label>
                        <div class="col-sm-2">
                            {{convertToRupiah(dataResponses.hargaPerKg)}}  
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Hasil/pcs(Kg)</label>
                        <div class="col-sm-2">
                            {{dataResponses.hasilPerPcs}}  
                        </div>
                    </div>
                    <hr>
                    <div class="form-group row">
                            <label for="example-text-input" class="col-sm-2">Total Harga Bahan(Rp)</label>
                            <div class="col-sm-3">
                                {{convertToRupiah(dataResponses.totalHargaBahan)}}  
                            </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Total Biaya/Pcs (Rp)</label>
                        <div class="col-sm-3">
                            {{convertToRupiah(dataResponses.totalBiayaPerPcs)}}  
                        </div>
                </div>
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <label for="example-text-input" class="col-sm-12 text-right">Total Biaya(Rp)</label>
                            <h5 class="col-sm-12 text-right">
                                {{convertToRupiah(dataResponses.totalBiaya)}}  
                            </h5>
                         </div>
                    </div>
                
                </div>
            </div>
        </div> <!-- end col -->
    </div>
    <!-- END ROW -->

</div>

<script>
    const apiUrl = '<%=process.env.URL%>'
    var app = new Vue({
     el: '#app',
     data: {
         id:'',
         dataResponses:{},
         typeCuttingComplete: 1,
         typeCuttingCombination: 2
     },
     async created() {
        this.id = JSON.parse('<%-data%>')
        await this.getData(this.id)
     },
     methods : {
        edit: function(id){
            location.href = "/dataproduksi/cutting/edit/"+id
        },
        getData: async function(id) {
            try{
                const res = await axios.post(apiUrl+'dataproduksi/cutting/detil/'+id)
                this.dataResponses = res.data[0]
                console.log(this.dataResponses)
            }catch(err){
                alert("Get data"+' '+err)
            }
        },
        convertToRupiah: function (val) {
            var txtNumber = parseFloat(val)
            var txtString = txtNumber.toString()
            var sisa = txtString.length % 3
            var rupiah = txtString.substr(0, sisa)
            var ribuan = txtString.substr(sisa).match(/\d{3}/g)
            if (ribuan) {
                var separator = sisa ? ',' : ''
                rupiah += separator + ribuan.join(',')
            }
            return rupiah
        },
        setRecentPrice: function(hargaAwal, lamaKepemilikan, penyusutan){
            var oneYear = 365
            var result =  Math.round(hargaAwal - hargaAwal  * ((penyusutan/100) / oneYear) * lamaKepemilikan) 
            if (result >= 0){
                return this.convertToRupiah(result)
            } else {
                return 0
            }
            
        }
     }
})
</script>