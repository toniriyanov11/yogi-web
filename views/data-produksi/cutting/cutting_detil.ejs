<div class="container-fluid">
    <div class="page-title-box">
        <div class="row align-items-center">
            <div class="col-sm-6">
                <h4 class="page-title"><i class="mdi mdi-content-cut "></i> <%= title %></h4>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-right">
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Yogi</a></li>
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
            </div>
        </div>
        <!-- end row -->
    </div>
    <!-- end page-title -->

    <!-- START button-->
    <div class="row">
        <div class="col py-3 text-right">
          <button type="button" class="btn btn-secondary waves-effect waves-light"  onclick="edit('<%= data.id %>')"><i class="mdi mdi-file-document-edit-outline align-middle mr-2"></i>Edit cutting</button>
        </div>
    </div>
    <!-- end button -->

    <!-- START ROW -->
    <div class="row">
        <div class="col-12">
            <div class="card m-b-30">
                <div class="card-body">

                    <h4 class="mt-0 mb- header-title">Data cutting</h4>


                    <div class="form-group row">
                        <h3 class="col-sm-6 pl-4"><%= data.id %></h3>
                        <%if (data.status=='Lunas') { %>
                        <h3 class="col-sm-6 pr-4 text-right" style="color: #6ec06e;"><%= data.status %></h3>
                        <% } %>
                        <%if (data.status=='Bayar sebagian') { %>
                            <h3 class="col-sm-6 pr-4 text-right" style="color: #f2ca27;"><%= data.status %></h3>
                        <% } %>
                        <%if (data.status=='Piutang') { %>
                            <h3 class="col-sm-6 pr-4 text-right" style="color: #2980b9;"><%= data.status %></h3>
                        <% } %>
                    </div>
                    <hr>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Tanggal</label>
                        <div class="col-sm-10">
                            <%= data.tgl %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Nama Item</label>
                        <div class="col-sm-10">
                            <%= data.nama %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Jenis Bahan</label>
                        <div class="col-sm-10">
                            <%= data.jenis %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Varian Bahan</label>
                        <div class="col-sm-10">
                            <%= data.varian %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Warna Bahan</label>
                        <div class="col-sm-10">
                            <%= data.warna %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Keterangan</label>
                        <div class="col-sm-10">
                            <%= data.ket %>
                        </div>
                    </div>
                    <hr>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Berat(kg)</label>
                        <div class="col-sm-2">
                            <%= data.berat %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Banyak(pcs)</label>
                        <div class="col-sm-2">
                            <%= data.jumlah %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Upah/pcs(Rp)</label>
                        <div class="col-sm-2">
                            <%= data.upahpcs %>
                        </div>
                    </div>
                    <hr>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Hasil/pcs(Kg)</label>
                        <div class="col-sm-2">
                            <%= data.hasilpcs %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Harga/kg(Rp)</label>
                        <div class="col-sm-2">
                            <%= data.hargakg %>
                        </div>
                    </div>
                    <hr>
                    <div class="form-group row">
                            <label for="example-text-input" class="col-sm-2">Total Harga Bahan(Rp)</label>
                            <h6 class="col-sm-3">
                                <%= data.tothbahan %>
                            </h6>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <label for="example-text-input" class="col-sm-12 text-right">total Biaya(Rp)</label>
                            <h5 class="col-sm-12 text-right">
                                <%= data.totbiaya %>
                            </h5>
                         </div>
                    </div>
                
                </div>
            </div>
        </div> <!-- end col -->
    </div>
    <!-- END ROW -->

</div>

<script>
    function edit(id){
        if(id=="3A-2020020001"){
            location.href = "/dataproduksi/cutting/edit/"+id+"?id=3A-2020020001&tgl=25/02/2020&nama=Singlet&berat=50&jumlah=100&tothbahan=2,500,000&totbiaya=3,000,000&upahpcs=5,000&hasilpcs=0.5&hargakg=50,000&jenis=polos&varian=solid&warna=putih&ket=-";
        }else if(id=="3A-2020020002"){
            location.href = "/dataproduksi/cutting/edit/"+id+"?id=3A-2020020002&tgl=25/02/2020&nama=Kaos&berat=30&jumlah=50&tothbahan=1,500,000&totbiaya=1,750,000&upahpcs=5,000&hasilpcs=1.6&hargakg=50,000&jenis=full print&varian=two tone&warna=biru&ket=-";
       }     
    }
</script>