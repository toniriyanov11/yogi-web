<div class="container-fluid" id="app">
    <div class="page-title-box">
        <div class="row align-items-center">
            <div class="col-sm-6">
                <h4 class="page-title"><i class="icon-paper-sheet"></i>  <%= title %></h4>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-right">
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Yogi</a></li>
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
            </div>
        </div>
        <!-- end row -->
    </div>
    <!-- end page-title -->

    
    <!-- Start row-->
    <div class="row">
        <div class="col-sm-6 col-xl-3">
            <div class="card">
                <div class="card-heading p-4">
                    <div class="mini-stat-icon float-right">
                        <i class="mdi mdi-calculator bg-secondary  text-white"></i>
                    </div>
                    <div>
                        <h6 class="font-16">Jumlah Utang</h6>
                    </div>
                    <h5 class="mt-4">{{dataResponses.banyakUtang}}</h5>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-xl-3">
            <div class="card">
                <div class="card-heading p-4">
                    <div class="mini-stat-icon float-right">
                        <i class="mdi mdi-coin bg-secondary  text-white"></i>
                    </div>
                    <div>
                        <h6 class="font-16">Total Utang</h6>
                    </div>
                    <h5 class="mt-4">Rp{{convertToRupiah(dataResponses.totalUtang)}}</h5>
                </div>
            </div>
        </div>

    </div>        
    <!-- end row -->
 

    <!-- START ROW -->
    <div class="row">
        <div class="col-12">
            <div class="card m-b-30">
                <div class="card-body">

                    <h4 class="mt-0 header-title">Data <%= title%></h4>
                    
                    <table id="datatable-buttons" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead>
                        <tr>
                            <th>Tanggal</th>
                            <th>No</th>         
                            <th>Nama</th>             
                            <th>Nominal (Rp)</th>
                        </tr>
                        </thead>


                        <tbody>
                        <tr v-for="dataResponse in dataResponses.data" :key="dataResponse.id"> 
                            <td>{{dataResponse.tanggal}}</td>
                            <td>{{dataResponse.id}}</a></td>
                            <td>{{dataResponse.nama}} <span style="font-size: smaller;">{{dataResponse.idPengeluaran}}</span> </td>
                            <td>{{convertToRupiah(dataResponse.nominal)}}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div> <!-- end col -->
    </div> 
    <!-- END ROW -->

</div>


<script>
    const apiUrl = '<%= process.env.URL %>'
     var app = new Vue({
      el: '#app',
      data: {
          dataResponses : {}
      },
      async created() {
        await this.getData()
      },
      methods:{
         getData: async function() {
             try{
                 const res = await axios.post(apiUrl+'listutang')
                 this.dataResponses = res.data[0]
                 console.log(this.dataResponses)
             }catch(err){
                 alert("Get data"+' '+err)
             }
         },
         convertToRupiah: function (val) {
             var txtNumber = parseFloat(val)
             var txtString = txtNumber.toString()
             var sisa = txtString.length % 3
             var rupiah = txtString.substr(0, sisa)
             var ribuan = txtString.substr(sisa).match(/\d{3}/g)
             if (ribuan) {
                 var separator = sisa ? ',' : ''
                 rupiah += separator + ribuan.join(',')
             }
             return rupiah
         },
      }
 })    
 </script>


