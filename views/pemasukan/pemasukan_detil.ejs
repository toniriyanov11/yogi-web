<div class="container-fluid" id="app">
    <div class="page-title-box">
        <div class="row align-items-center">
            <div class="col-sm-6">
                <h4 class="page-title"><i class="icon-arrow-down"></i> <%= title %></h4>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-right">
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Yogi</a></li>
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
            </div>
        </div>
        <!-- end row -->
    </div>
    <!-- end page-title -->

    <!-- START button-->
    <div class="row">
        <div class="col py-3 text-right">
          <button type="button" class="btn btn-secondary waves-effect waves-light"  @click="edit(dataResponses.id)"><i class="mdi mdi-file-document-edit-outline align-middle mr-2"></i>Edit pemasukan</button>
        </div>
    </div>
    <!-- end button -->

    <!-- START ROW -->
    <div class="row">
        <div class="col-12">
            <div class="card m-b-30">
                <div class="card-body">

                    <h4 class="mt-0 mb- header-title">Data pemasukan</h4>


                    <div class="form-group row">
                        <h3 class="col-sm-6 pl-4">{{dataResponses.id}}</h3>
                        <h3 v-if="dataResponses.kodeStatusBayar == paymentStatusPaid " class="col-sm-6 pr-4 text-right" style="color: #6ec06e;">{{dataResponses.ketStatusBayar}}</h3>
                        <h3 v-if="dataResponses.kodeStatusBayar == paymentStatusHalfPaid" class="col-sm-6 pr-4 text-right" style="color: #f2ca27;">{{dataResponses.ketStatusBayar}}</h3>
                        <h3 v-if="dataResponses.kodeStatusBayar == paymentStatusCredit" class="col-sm-6 pr-4 text-right" style="color: #2980b9;">{{dataResponses.ketStatusBayar}}</h3>
                    </div>
                    <hr>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Tanggal</label>
                        <div class="col-sm-10">
                            {{dataResponses.tanggal}}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Jenis Pemasukan</label>
                        <div class="col-sm-10">
                            {{dataResponses.ketJenisPemasukan}}
                        </div>
                    </div>
                    <div class="form-group row" v-if="dataResponses.kodeJenisPemasukan == typeInvoicePayment">
                            <label for="example-text-input" class="col-sm-2">Client</label>
                            <div class="col-sm-10">
                                {{dataClients.find(x=> x.kode == dataResponses.kodeClient).nama}}
                            </div>
                    </div>
                    <hr>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Nama Item</label>
                        <div class="col-sm-10">
                            {{dataResponses.nama}}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">banyak</label>
                        <div class="col-sm-2">
                            {{dataResponses.jumlah}}
                        </div>
                    </div>
                    <hr>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Keterangan</label>
                        <div class="col-sm-10">
                            {{dataResponses.ket}}
                        </div>
                    </div>
                    <hr>
                    <div class="form-group row" v-if="dataResponses.kodeStatusBayar == paymentStatusHalfPaid">
                            <div class="col-sm-5">
                                <label for="example-text-input" class="col-sm-12 text-right">Lunas(Rp)</label>
                                <div class="col-sm-12 text-right">
                                    {{convertToRupiah(dataResponses.nominal-dataResponses.piutang)}}
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <label for="example-text-input" class="col-sm-12">Piutang(Rp)</label>
                                <div class="col-sm-12">
                                    {{convertToRupiah(dataResponses.piutang)}}
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <label for="example-text-input" class="col-sm-12 text-right">Nominal(Rp)</label>
                                <h5 class="col-sm-12 text-right">
                                {{convertToRupiah(dataResponses.nominal)}}
                                </h5>
                            </div>
                        </div>

                         
                       <div class="form-group row" v-if="dataResponses.kodeStatusBayar != paymentStatusHalfPaid">
                            <div class="col-sm-12">
                                <label for="example-text-input" class="col-sm-12 text-right">Nominal(Rp)</label>
                                <h5 class="col-sm-12 text-right">
                                    {{convertToRupiah(dataResponses.nominal)}}
                                </h5>
                            </div>
                        </div>
                         
                    </div>
                </div>
            </div>
        </div> <!-- end col -->
    </div>
    <!-- END ROW -->

</div>

<script src="https://cdn.jsdelivr.net/npm/vue@2.6.11"></script> 
<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.19.2/axios.min.js"></script>
<script>
    var app = new Vue({
     el: '#app',
     data: {
         dataResponses:{},
         dataClients:{},
         dataPaymentsStatus:{},
         typeInvoicePayment:'1',
         paymentStatusPaid:'1',
         paymentStatusHalfPaid:'2',
         paymentStatusCredit:'4',
     },
     async created() {
        this.dataResponses = JSON.parse('<%-data%>')[0]
        await this.getMasterClient()
        await this.getMasterPaymentStatus()
        console.log(this.dataResponses)
     },
     methods : {
        edit: function(id){
            location.href = "/pemasukan/edit/"+id
        },
        getMasterClient: async function() {
            try{
                const res = await axios.get('http://localhost:45000/master/client')
                this.dataClients = res.data
            }catch(err){
                alert("Client"+' '+err)
            }
        },
        getMasterPaymentStatus: async function() {
            try{
                const res = await axios.get('http://localhost:45000/master/payment-status')
                this.dataPaymentsStatus = res.data
            }catch(err){
                alert("Payment Status"+' '+err)
            }
        },
        convertToRupiah: function (val) {
            var txtNumber = parseFloat(val)
            var txtString = txtNumber.toString()
            var sisa = txtString.length % 3
            var rupiah = txtString.substr(0, sisa)
            var ribuan = txtString.substr(sisa).match(/\d{3}/g)
            if (ribuan) {
                var separator = sisa ? ',' : ''
                rupiah += separator + ribuan.join(',')
            }
            return rupiah
        }
     }
     })
 </script>