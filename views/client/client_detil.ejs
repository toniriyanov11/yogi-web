<div class="container-fluid">
    <div class="page-title-box">
        <div class="row align-items-center">
            <div class="col-sm-6">
                <h4 class="page-title"><i class="icon-arrow-down"></i> <%= title %></h4>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-right">
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Yogi</a></li>
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
            </div>
        </div>
        <!-- end row -->
    </div>
    <!-- end page-title -->

    <!-- START button-->
    <div class="row">
        <div class="col py-3 text-right">
          <button type="button" class="btn btn-secondary waves-effect waves-light"  onclick="edit('<%= data.id %>')"><i class="mdi mdi-file-document-edit-outline align-middle mr-2"></i>Edit Data Client</button>
        </div>
    </div>
    <!-- end button -->

    <!-- START ROW -->
    <div class="row">
        <div class="col-12">
            <div class="card m-b-30">
                <div class="card-body">

                    <h4 class="mt-0 mb-4 header-title">Data <%=title%></h4>

                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Nama Client</label>
                        <div class="col-sm-10">
                            <%= data.nama %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">No Hp </label>
                        <div class="col-sm-10">
                            <%= data.nohp %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Email</label>
                        <div class="col-sm-10">
                            <%= data.email %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Nama Usaha</label>
                        <div class="col-sm-10">
                            <%= data.namausaha %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2"> Alamat  </label>
                        <div class="col-sm-10">
                            <%= data.alamat %>
                        </div>
                    </div>
                </div>
            </div>
        </div> <!-- end col -->
    </div>
    <!-- END ROW -->

</div>

<script>
   
   function edit(id){
        if(id=="c-0000001"){
            location.href = "/client/edit/"+id+"?id=c-0000001&nama=client 1&nohp=082393348484&email=client1@gmail.com&alamat=jakarta&namausaha=toko jaya baru";
        }else if(id=="c-0000002"){
            location.href = "/client/edit/"+id+"?id=c-0000002&nama=client 2&nohp=082392176341&email=client2@gmail.com&alamat=bandung&namausaha=toko berkah";
        }
    }
</script>