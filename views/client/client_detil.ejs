<div class="container-fluid" id="app">
    <div class="page-title-box">
        <div class="row align-items-center">
            <div class="col-sm-6">
                <h4 class="page-title"><i class="icon-arrow-down"></i> <%= title %></h4>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-right">
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Yogi</a></li>
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
            </div>
        </div>
        <!-- end row -->
    </div>
    <!-- end page-title -->

    <!-- START button-->
    <div class="row">
        <div class="col py-3 text-right">
          <button type="button" class="btn btn-secondary waves-effect waves-light"  @click="edit(dataResponses.kode)"><i class="mdi mdi-file-document-edit-outline align-middle mr-2"></i>Edit Client</button>
        </div>
    </div>
    <!-- end button -->

    <!-- START ROW -->
    <div class="row">
        <div class="col-12">
            <div class="card m-b-30">
                <div class="card-body">

                    <h4 class="mt-0 mb-4 header-title">Data <%=title%></h4>

                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Nama Client</label>
                        <div class="col-sm-10">
                            {{dataResponses.nama}}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">No Hp</label>
                        <div class="col-sm-10">
                            {{dataResponses.noHp}}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Email</label>
                        <div class="col-sm-10">
                            {{dataResponses.email}}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Alamat</label>
                        <div class="col-sm-10">
                            {{dataResponses.alamat}}
                        </div>
                    </div>
                </div>
            </div>
        </div> <!-- end col -->
    </div>
    <!-- END ROW -->

</div>

<script>
    const apiUrl = '<%=process.env.URL%>'
    var app = new Vue({
     el: '#app',
     data: {
         id:'',
         dataResponses:{},
     },
     async created() {
        this.id = JSON.parse('<%-data%>')
        await this.getData(this.id)
     },
     methods : {
        edit: function(id){
            location.href = "/client/edit/"+id
        },
        getData: async function(id) {
            try{
                const res = await axios.post(apiUrl+'client/detil/'+id)
                this.dataResponses = res.data[0]
            }catch(err){
                alert("Get data"+' '+err)
            }
        },
     }
     })
 </script>