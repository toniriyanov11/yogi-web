     <!--  Modal content for the above example -->
     <div v-if="modalEdit">
        <div class="modals  show">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title mt-0" id="myLargeModalLabel"></h5>Edit Harga</h5>
                        <button @click="closeModalEdit" type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-12">
                                <div class="panel panel-default">
                                    <div>
                                        <div class="form-group row">
                                            <label for="example-text-input" class="col-sm-2 col-form-label">Masukkan Harga Terbaru (Rp)</label>
                                            <div class="col-sm-10">
                                                <input class="form-control" type="text" v-model="editedItem.harga"  id="example-text-input">
                                            </div>
                                        </div>
                                       
                                        <div class="form-group text-right">
                                            <div class="col-sm-7">
                                                <button :disabled="isButtonDisable" @click="checkValidation()" class="btn btn-primary waves-effect waves-light">
                                                    Submit
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div> 
                        </div>
                        <!-- end row -->
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div>
        <div @click="closeModalEdit" class="modals-backdrop"></div>
    </div>
    <!-- /.modal -->

</div>

<script>
    const apiUrl = '<%= process.env.URL %>'
    var app = new Vue({
     el: '#app',
     data: {
        dataResponses : {},
        editedItem: {},
        modalEdit: false,
        isButtonDisable:false
     },
     created() {
        this.getData()
     },
     methods:{
        edit: function(data){
            this.modalEdit = true
            this.editedItem = Object.assign({},data)
        },
        tambah: function(){
            location.href = "/master/masterjenisbahan/tambah"
        },
        getData: async function() {
            try{
                const res = await axios.get(apiUrl+'master/stuff-type')
                this.dataResponses = res.data
                console.log(this.dataResponses)
            }catch(err){
                alert("Get data"+' '+err)
            }
        },
        actEdit: async function() {
            try{
                var data = this.editedItem
                const res = await axios.post(apiUrl+'master/masterjenisbahan/edit', { data:data })
                if (res.data.success){
                    this.alertSuccess(res.data.msg)
                    this.closeModalEdit()
                    setTimeout(function(){ window.location.href = apiUrl+'master/masterjenisbahan'; }, 1000);
                }
            }catch(err){
                alert("Edit data"+' '+err)
                this.closeModalEdit()
            }
        },
        checkValidation: async function(){
            var validate = false
            if(this.editedItem.harga == ''){
                validate = false
            } else {
                validate = true
            }

            if(validate){
                this.alertEdit()
            }else{
                alert("Harap isi semua field")
            }
        },
        convertToRupiah: function (val) {
            var txtNumber = parseFloat(val)
            var txtString = txtNumber.toString()
            var sisa = txtString.length % 3
            var rupiah = txtString.substr(0, sisa)
            var ribuan = txtString.substr(sisa).match(/\d{3}/g)
            if (ribuan) {
                var separator = sisa ? ',' : ''
                rupiah += separator + ribuan.join(',')
            }
            return rupiah
        },
        alertEdit:  function (data) {
             swal({
                title: "Anda yakin ingin merubah data?",
                text: "Pastikan data yang anda ubah benar",
                icon: "warning",
                buttons: ["batal", "ubah"],
                dangerMode: false,
                })
                .then((willEdit) => {
                if (willEdit) {
                     this.actEdit(data)
                }
            });
        },
        alertSuccess: function (message){
            swal({
                title:"",
                text:message, 
                icon:"success",
                buttons:false});
        },
        closeModalEdit(){
            this.modalEdit = false
            this.editedItem = Object.assign({},{})
        }
     }
     })
 </script>

