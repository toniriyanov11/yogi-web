<div class="container-fluid" id="app">
    <div class="page-title-box">
        <div class="row align-items-center">
            <div class="col-sm-6">
                <h4 class="page-title"><i class="icon-arrow-up"></i> <%= title %></h4>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-right">
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Yogi</a></li>
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
            </div>
        </div>
        <!-- end row -->
    </div>
    <!-- end page-title -->

    <!-- START button-->
     <div class="row">
        <div class="col py-3 text-right">
          <button type="button" class="btn btn-secondary waves-effect waves-light"  @click="edit(dataResponses.id)"><i class="mdi mdi-file-document-edit-outline align-middle mr-2"></i>Edit Pembelian</button>
        </div>
    </div>
    <!-- end button -->

    <!-- START ROW -->
    <div class="row">
        <div class="col-12">
            <div class="card m-b-30">
                <div class="card-body">

                    <h4 class="mt-0 mb- header-title">Data Pembelian</h4>


                    <div class="form-group row">
                        <h3 class="col-sm-6 pl-4">{{dataResponses.id}}</h3>
                        <h3 v-if="dataResponses.kodeStatusBayar == paymentStatusPaid " class="col-sm-6 pr-4 text-right" style="color: #6ec06e;">{{dataResponses.ketStatusBayar}}</h3>
                        <h3 v-if="dataResponses.kodeStatusBayar == paymentStatusHalfPaid" class="col-sm-6 pr-4 text-right" style="color: #f2ca27;">{{dataResponses.ketStatusBayar}}</h3>
                        <h3 v-if="dataResponses.kodeStatusBayar == paymentStatusDebt" class="col-sm-6 pr-4 text-right" style="color: #2980b9;">{{dataResponses.ketStatusBayar}}</h3>
                    </div>
                    <hr>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Tanggal</label>
                        <div class="col-sm-10">
                            {{dataResponses.tanggal}}   
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Jenis</label>
                        <div class="col-sm-10">
                            {{dataResponses.ketJenisPembelian}}
                        </div>
                    </div>
                    <div class="form-group row" v-if="dataResponses.kodeJenisPembelian == typeMaterial">
                          <label for="example-text-input" class="col-sm-2">Jenis Bahan Baku</label>
                          <div class="col-sm-10">
                            {{dataResponses.ketJenisBahanBaku}}
                          </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Nama Item</label>
                        <div class="col-sm-10">
                            {{dataResponses.nama}}
                        </div>
                    </div>
                    <div class="form-group row" v-if="dataResponses.kodeJenisPembelian == typeMaterial">
                        <label for="example-text-input" class="col-sm-2">Suplier</label>
                        <div class="col-sm-10">
                            {{dataSuppliers.find(x=> x.kode == dataResponses.kodeSupplier).nama}}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">Keterangan</label>
                        <div class="col-sm-10">
                            {{dataResponses.ket}}
                        </div>
                    </div>
                    <hr>
                    <div class="form-group row" v-if="dataResponses.kodeJenisPembelian == typeInventory">
                        <label for="example-text-input" class="col-sm-2">Nilai Penyusutan</label>
                        <div class="col-sm-10">
                            {{dataResponses.nilaiPenyusutan}}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2">banyak</label>
                        <div class="col-sm-2">
                            {{dataResponses.jumlah}}
                        </div>
                    </div>
                    <hr>
                    <div class="form-group row" v-if="dataResponses.kodeStatusBayar == paymentStatusHalfPaid">
                        <div class="col-sm-5">
                            <label for="example-text-input" class="col-sm-12 text-right">Lunas(Rp)</label>
                            <div class="col-sm-12 text-right">
                                {{convertToRupiah(dataResponses.nominal-dataResponses.hutang)}}
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <label for="example-text-input" class="col-sm-12">Hutang(Rp)</label>
                            <div class="col-sm-12">
                                {{convertToRupiah(dataResponses.hutang)}}
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <label for="example-text-input" class="col-sm-12 text-right">Nominal(Rp)</label>
                            <h5 class="col-sm-12 text-right">
                            {{convertToRupiah(dataResponses.nominal)}}
                            </h5>
                        </div>
                    </div>
                      
                    <div class="form-group row" v-if="dataResponses.kodeStatusBayar != paymentStatusHalfPaid">
                        <div class="col-sm-12">
                            <label for="example-text-input" class="col-sm-12 text-right">Nominal(Rp)</label>
                            <h5 class="col-sm-12 text-right">
                                {{convertToRupiah(dataResponses.nominal)}}
                            </h5>
                        </div>
                    </div>
                    <div class="form-group row" v-if="dataResponses.kodeJenisPembelian == typeInventory">
                        <div class="col-sm-12 text-muted">
                            <label for="example-text-input" class="col-sm-12 text-right">Nominal Setelah Penyusutan(Rp)</label>
                            <h5 class="col-sm-12 text-right">
                                Fitur ini masih dalam pengerjaan
                            </h5>
                         </div>
                    </div>
                </div>
            </div>
        </div> <!-- end col -->
    </div>
    <!-- END ROW -->

</div>

<script>
    const apiUrl = '<%=process.env.URL%>'
    var app = new Vue({
     el: '#app',
     data: {
         id:'',
         dataResponses:{},
         dataSuppliers:{},
         dataPaymentsStatus:{},
         typeMaterial:'1',
         typeInventory:'2',
         paymentStatusPaid:'1',
         paymentStatusHalfPaid:'2',
         paymentStatusDebt:'3',
     },
     async created() {
        this.id = JSON.parse('<%-data%>')
        await this.getMasterSupplier()
        await this.getData(this.id)
        await this.getMasterPaymentStatus()
     },
     methods : {
        edit: function(id){
            location.href = "/pengeluaran/pembelian/edit/"+id
        },
        getData: async function(id) {
            try{
                const res = await axios.post(apiUrl+'pengeluaran/pembelian/detil/'+id)
                this.dataResponses = res.data[0]
            }catch(err){
                alert("Get data"+' '+err)
            }
        },
        getMasterSupplier: async function() {
            try{
                const res = await axios.get(apiUrl+'master/supplier')
                this.dataSuppliers = res.data
                console.log(this.dataSuppliers)
            }catch(err){
                alert("Get Supplier"+' '+err)
            }
        },
        getMasterPaymentStatus: async function() {
            try{
                const res = await axios.get(apiUrl+'master/payment-status')
                this.dataPaymentsStatus = res.data
            }catch(err){
                alert("Get Payment Status"+' '+err)
            }
        },
        convertToRupiah: function (val) {
            var txtNumber = parseFloat(val)
            var txtString = txtNumber.toString()
            var sisa = txtString.length % 3
            var rupiah = txtString.substr(0, sisa)
            var ribuan = txtString.substr(sisa).match(/\d{3}/g)
            if (ribuan) {
                var separator = sisa ? ',' : ''
                rupiah += separator + ribuan.join(',')
            }
            return rupiah
        }
     }
     })
 </script>